<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Bottom Navigation View Style -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">10dp</item> <!-- Set a visible icon size -->
        <item name="itemTextAppearanceActive">@style/CustomBottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavText</item>
    </style>

    <!-- Custom Text Appearance for Bottom Navigation -->
    <style name="CustomBottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item> <!-- Reduced text size -->

    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/bg_red</item>
    </style>


    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
