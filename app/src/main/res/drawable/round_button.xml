<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D32F2F"/> <!-- Dark red color for pressed state -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F44336"/> <!-- Light red color for normal state -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
