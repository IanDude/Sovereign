    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabrecognition_top_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@drawable/custom_tab_indicator"
        app:tabIndicatorColor="@color/theme_color"
        app:tabIndicatorHeight="4dp"

        app:tabSelectedTextColor="@color/tab_active"
        app:tabTextAppearance="@style/CustomTabText"
        app:tabTextColor="@color/tab_inactive">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ranking" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HallOfFame_title" />

    </com.google.android.material.tabs.TabLayout>





    <!-- Content FrameLayout -->
    <FrameLayout
        android:id="@+id/recognition_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabrecognition_top_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

