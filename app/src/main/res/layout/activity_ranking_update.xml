<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D32F2F"
            android:padding="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking System"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-2025"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Input for Department Name -->
        <EditText
            android:id="@+id/inputDepartmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Department Name"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp" />

        <!-- Input for Department Points -->
        <EditText
            android:id="@+id/inputDepartmentPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Points"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:inputType="number" />

        <!-- Button to Add Department -->
        <Button
            android:id="@+id/btnAddDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Department"
            android:textColor="#FFFFFF"
            android:background="#1976D2"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Input for Editing Department Points -->
        <EditText
            android:id="@+id/inputEditDepartmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Department Name to Edit Points"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputEditDepartmentPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Points"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:inputType="number" />

        <!-- Button to Edit Department Points -->
        <Button
            android:id="@+id/btnEditDepartmentPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Department Points"
            android:textColor="#FFFFFF"
            android:background="#388E3C"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Input for Deleting Department -->
        <EditText
            android:id="@+id/inputDeleteDepartmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Department Name to Delete"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp" />

        <!-- Button to Delete Department -->
        <Button
            android:id="@+id/btnDeleteDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Department"
            android:textColor="#FFFFFF"
            android:background="#D32F2F"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- Button to View Rankings -->
        <Button
            android:id="@+id/btnGoToMainActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Rankings in Detail"
            android:textColor="#FFFFFF"
            android:background="#FFA000"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp" />

        <!-- Rankings Display -->
        <TextView
            android:id="@+id/tvRankings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Rankings will appear here."
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="#E0E0E0"
            android:elevation="2dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
